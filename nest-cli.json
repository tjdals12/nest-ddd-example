{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "./infrastructure/config/**/.env*",
                "outDir": "./dist/src"
            }
        ],
        "plugins": [
            {
                "name": "@nestjs/swagger"
            }
        ]
    }
}
